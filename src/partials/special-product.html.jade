    #carousel-example-generic.carousel.slide(data-ride='carousel')
      // Indicators
      ol.carousel-indicators.indicators-cus-left
        each item, i in images_slide
          if i == 0
            li(data-target="#carousel-example-generic", data-slide-to= i).active
          else
            li(data-target="#carousel-example-generic", data-slide-to= i)
      // Wrapper for slides
      .carousel-inner.inner_mobile(role='listbox')
        each item, i in images_slide
          if i == 0
            .item.active
              img.img-responsive.img__slider(src= images_url_slide + item, alt= item)
          else
            .item
